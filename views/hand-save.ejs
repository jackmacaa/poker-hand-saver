<%- include('partials/header'); -%>
    <form action="hand-table">
      <div class="first-input">
        <div class="players-box">
          <label for="number-of-players">Number of Players:</label>
          <input
            type="number"
            id="number-of-players"
            name="number-of-players"
            min="2"
            max="10"
            value="6"
          />
        </div>
        <div class="blinds-box">
          <div class="sb">
            <label for="sb">SB:</label>
            <input type="number" id="sb" name="sb" min="1" value="1"/>
          </div>
          <div class="bb">
            <label for="BB">BB:</label>
            <input type="number" id="bb" name="bb" min="1" value="2"/>
          </div>
        </div>
        <input type="submit" value="Continue" />
      </div>
    </form>
<%- include('partials/footer'); -%>